@model EntityLayer.Concrete.Writer
@{
    ViewData ["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Writer Information</h4>
                @Html.HiddenFor(x=>x.WriterID , new{@class= "form-control"})
                <form class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputEmail1">Writer Name</label>
                    @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control", @placeholder = "Writer Name" })
                    @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Writer Password</label>
                    @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control", @placeholder = "Writer Password" })
                    @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Writer Mail</label>
                    @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control", @placeholder = "Writer Mail" })
                    @Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "text-danger" })
                </div>
              
                <div class="form-group">
                    <label>Writer Image</label>
                    <input type="file" name="img[]" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Chose Image</button>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleTextArea">Writer About</label>
                    @Html.TextAreaFor(x => x.WriterAbout, 10, 3, new { @class = "form-control", @placeholder = "Writer About" })
                    @Html.ValidationMessageFor(x => x.WriterAbout, " ", new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button  class="btn btn-primary">Cancel</button>
                </form>
            </div>
        </div>
    </div>
}